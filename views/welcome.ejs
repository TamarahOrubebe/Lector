        <section id="second" class="container-fluid">
            <div class="mid">
                <h2><span class="ielts">Welcome <%=user.username%></span></h2>
                
                <ul class="nav nav-tabs nav-justified" style="border-bottom:0px">
                    <li class="nav-item">
                        <a class="nav-link active test-link" aria-current="page" onclick="return handleClick()" href="#history">History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link test-link" onclick="return handleClick()" href="#reviewed">Reviewed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link test-link" onclick="return handleClick()" href="#subscription">Subscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link test-link" onclick="return handleClick()" href="#upload">Upload</a>
                    </li>
                </ul>
                
                <div id="history" class="container-fluid">

                    <% if (hList.length == 0) { %>

                        <h2><%=user.username%> has no history of uploaded files</h2>

                   <% } else { %>

                        <% hList.forEach(item => item) %>

                    <% } %>
                   
                </div>
                <div id="reviewed" class="container-fluid">
                    <% if (hList.length==0) { %>

                        <h2><%=user.username%> has no reviewed tasks</h2>
                    
                    <% } else { %>

                        <% hList.forEach(item=> item) %>
                    
                    <% } %>
                   
                </div>
                <div id="subscription" class="container-fluid">
                    <% if (hList.length==0) { %>
                    
                        <h2><%=user.username%> has no subscription</h2>
                        <p><strong>Please, pick a price <a href="/bookings/pricing">plan</a> and pay to activate your subscription</strong></p>
                    
                    <% } else { %>

                        <% hList.forEach(item=> item) %>
                    
                    <% } %>

                   
                </div>
                
                <div id="upload" class="container-fluid">
                    <div class="container">
                    
                        <div id="message">
                            <% if(message !=="" ) { %>
                    
                    
                                <h2>
                                    <%=message%>
                                </h2>
                    
                    
                    
                                <% } %>
                    
                        </div>
                    </div>

                    <form action="/welcome/new-upload" method="POST" enctype="multipart/form-data">
                
                        <div class="form-group">
                            <input type="file" class="form-control" name="file" id="">
                        </div>
                
                        <button type="submit" class="form-control btn btn-primary submit">Upload</button>
                    </form>
                          
                </div>

            </div>
            
            
        </section>
        <section id="third" class="container-fluid">
